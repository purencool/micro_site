{
    "description": "Layout where the systems data keys are stored",
    "@routes": {
        "@schema": [
            "content/home/content/",
            "content/articles/content/",
            "content/page/"
        ],
        "@list": "routes"
    },
    "@media_data": {
        "@schema": "assets",
        "@list": "config/media"
    }, 
    "@types": {
        "article": {
            "header": {
                "@schema": "universal/header"
            },
            "content": {
                "@schema": "content/articles/"
            },
            "right_sidebar": {
                "@schema": "content/articles/sections/sidebar"
            },
            "footer": {
                "@schema": "universal/footer"
            }
        },
        "home": {
            "header": {
                "@schema": "universal/header"
            },
            "hero": {
                "@schema": "content/home/sections/hero"
            },
            "about": {
                "@schema": "content/home/sections/about"
            },
            "content": {
                "@schema": "content/home/home"
            },
            "articles": {
                "@schema": "content/home/home"
            },
            "footer": {
                "@schema": "universal/footer"
            }
        },
        "page": {
            "header": {
                "@schema": "universal/header"
            },
            "content": {
                "@schema": "content/pages/"
            },
            "footer": {
                "@schema": "universal/footer"
            }
        }
    } 
}
